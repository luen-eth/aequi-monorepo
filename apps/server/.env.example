# Server Configuration
NODE_ENV=production
PORT=3000

# RPC URLs (at least one required per chain you want to support)
# You can provide up to 3 URLs per chain for redundancy

# Ethereum
ETHEREUM_RPC_URL=https://eth.llamarpc.com
ETHEREUM_RPC_URL_2=https://rpc.ankr.com/eth
ETHEREUM_RPC_URL_3=https://ethereum.publicnode.com

# BSC
BSC_RPC_URL=https://bsc-dataseed1.binance.org
BSC_RPC_URL_2=https://bsc-dataseed2.binance.org
BSC_RPC_URL_3=https://bsc.publicnode.com

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_RPC_URL_2=https://rpc.ankr.com/polygon
POLYGON_RPC_URL_3=https://polygon-bor-rpc.publicnode.com

# Arbitrum
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_RPC_URL_2=https://rpc.ankr.com/arbitrum
ARBITRUM_RPC_URL_3=https://arbitrum-one-rpc.publicnode.com

# Optimism
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISM_RPC_URL_2=https://rpc.ankr.com/optimism
OPTIMISM_RPC_URL_3=https://optimism-rpc.publicnode.com

# Base
BASE_RPC_URL=https://mainnet.base.org
BASE_RPC_URL_2=https://base.meowrpc.com
BASE_RPC_URL_3=https://base-rpc.publicnode.com

# Avalanche
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_RPC_URL_2=https://rpc.ankr.com/avalanche
AVALANCHE_RPC_URL_3=https://avalanche-c-chain-rpc.publicnode.com


# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Cache TTL (seconds)
QUOTE_TTL_SECONDS=30
TOKEN_METADATA_TTL_SECONDS=3600
